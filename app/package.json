{
  "name": "rustots-app",
  "version": "0.1.0",
  "description": "TypeScript Analyzer UI",
  "author": "Giovani, Gabriel, Leonardo, Rennan",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron .",
    "electron-dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron\"",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "electron": "^27.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.6.4",
    "node": "^24.7.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.rustots.app",
    "productName": "Rustots",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "win": {
      "icon": "resources/icon.png"
    },
    "files": [
      "build/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../core/target/release/rustots.exe",
        "to": "rustots.exe"
      }
    ]
  }
}
