{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TokenStream",
  "type": "object",
  "properties": {
    "tokens": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "identifier", "keyword", "operator", "literal", 
              "punctuation", "comment", "whitespace", "newline"
            ]
          },
          "value": {
            "type": "string"
          },
          "position": {
            "type": "object",
            "properties": {
              "start": {
                "type": "integer",
                "minimum": 0
              },
              "end": {
                "type": "integer",
                "minimum": 0
              },
              "line": {
                "type": "integer",
                "minimum": 1
              },
              "column": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": ["start", "end", "line", "column"]
          }
        },
        "required": ["type", "value", "position"]
      }
    },
    "diagnostics": {
      "type": "array",
      "items": {
        "$ref": "diagnostic.json"
      }
    }
  },
  "required": ["tokens", "diagnostics"]
}
