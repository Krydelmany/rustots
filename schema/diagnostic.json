{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Diagnostic",
  "type": "object",
  "properties": {
    "level": {
      "type": "string",
      "enum": ["error", "warning", "info"]
    },
    "message": {
      "type": "string"
    },
    "location": {
      "type": "object",
      "properties": {
        "line": {
          "type": "integer",
          "minimum": 1
        },
        "column": {
          "type": "integer",
          "minimum": 1
        },
        "length": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["line", "column", "length"]
    },
    "code": {
      "type": "string"
    }
  },
  "required": ["level", "message", "location"]
}
